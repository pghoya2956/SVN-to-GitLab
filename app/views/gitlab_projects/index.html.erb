<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Select GitLab Target Project</h2>
        <%= link_to "Back to Repository", repository_path(@repository), class: "btn btn-secondary" %>
      </div>
      
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Repository: <%= @repository.name %></h5>
          <p class="card-text">SVN URL: <%= @repository.svn_url %></p>
        </div>
      </div>
      
      <!-- Search Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Search Projects</h5>
        </div>
        <div class="card-body">
          <%= form_with(url: search_gitlab_projects_path, method: :get, data: { turbo_frame: "search_results" }) do |form| %>
            <%= hidden_field_tag :repository_id, @repository.id %>
            <div class="row g-3">
              <div class="col-md-9">
                <%= form.text_field :query, class: "form-control", placeholder: "Search for projects..." %>
              </div>
              <div class="col-md-3">
                <%= form.submit "Search", class: "btn btn-primary w-100" %>
              </div>
            </div>
          <% end %>
          
          <div id="search_results" class="mt-3">
            <%= turbo_frame_tag "search_results" %>
          </div>
        </div>
      </div>
      
      <!-- Personal Projects -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Personal Projects</h5>
        </div>
        <div class="card-body">
          <% if @personal_projects[:success] %>
            <div class="list-group">
              <% @personal_projects[:projects].each do |project| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="mb-1"><%= project[:name] %></h6>
                    <p class="mb-1 text-muted"><%= project[:path_with_namespace] %></p>
                    <small class="text-muted"><%= project[:description] %></small>
                  </div>
                  <%= form_with(url: select_gitlab_projects_path, method: :post, local: true) do |form| %>
                    <%= hidden_field_tag :repository_id, @repository.id %>
                    <%= hidden_field_tag :project_id, project[:id] %>
                    <%= form.submit "Select", class: "btn btn-sm btn-primary" %>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <% if @personal_projects[:total_count] > @personal_projects[:per_page] %>
              <nav class="mt-3">
                <ul class="pagination justify-content-center">
                  <% current_page = @personal_projects[:page] %>
                  <% total_pages = (@personal_projects[:total_count].to_f / @personal_projects[:per_page]).ceil %>
                  
                  <% (1..total_pages).each do |page| %>
                    <li class="page-item <%= 'active' if page == current_page %>">
                      <%= link_to page, gitlab_projects_path(repository_id: @repository.id, personal_page: page), 
                          class: "page-link" %>
                    </li>
                  <% end %>
                </ul>
              </nav>
            <% end %>
          <% else %>
            <div class="alert alert-danger">
              <%= @personal_projects[:errors].join(", ") %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Group Projects -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Group Projects</h5>
        </div>
        <div class="card-body">
          <% if @group_projects[:success] %>
            <% if @group_projects[:projects].any? %>
              <div class="list-group">
                <% @group_projects[:projects].each do |project| %>
                  <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1"><%= project[:name] %></h6>
                      <p class="mb-1 text-muted"><%= project[:path_with_namespace] %></p>
                      <small class="text-muted"><%= project[:description] %></small>
                    </div>
                    <%= form_with(url: select_gitlab_projects_path, method: :post, local: true) do |form| %>
                      <%= hidden_field_tag :repository_id, @repository.id %>
                      <%= hidden_field_tag :project_id, project[:id] %>
                      <%= form.submit "Select", class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              
              <% if @group_projects[:total_count] > @group_projects[:per_page] %>
                <nav class="mt-3">
                  <ul class="pagination justify-content-center">
                    <% current_page = @group_projects[:page] %>
                    <% total_pages = (@group_projects[:total_count].to_f / @group_projects[:per_page]).ceil %>
                    
                    <% (1..total_pages).each do |page| %>
                      <li class="page-item <%= 'active' if page == current_page %>">
                        <%= link_to page, gitlab_projects_path(repository_id: @repository.id, group_page: page), 
                            class: "page-link" %>
                      </li>
                    <% end %>
                  </ul>
                </nav>
              <% end %>
            <% else %>
              <p class="text-muted">No group projects found.</p>
            <% end %>
          <% else %>
            <div class="alert alert-danger">
              <%= @group_projects[:errors].join(", ") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>