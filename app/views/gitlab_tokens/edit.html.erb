<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Update GitLab Access Token</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @gitlab_token, url: gitlab_token_path, method: :patch, local: true) do |form| %>
            <% if @gitlab_token.errors.any? %>
              <div class="alert alert-danger">
                <h6>Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @gitlab_token.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <% if @repository %>
              <%= hidden_field_tag :repository_id, @repository.id %>
            <% end %>
            
            <div class="mb-3">
              <%= form.label :endpoint, class: "form-label" %>
              <%= form.text_field :endpoint, class: "form-control" %>
              <div class="form-text">GitLab API endpoint</div>
            </div>
            
            <div class="mb-3">
              <%= form.label :token, "New Access Token (leave blank to keep current)", class: "form-label" %>
              <%= form.password_field :token, class: "form-control" %>
              <div class="form-text">Only enter a new token if you want to change it</div>
            </div>
            
            <div class="d-flex justify-content-between">
              <%= form.submit "Update Token", class: "btn btn-primary" %>
              <div>
                <%= link_to "Delete Token", gitlab_token_path, 
                    data: { 
                      "turbo-method": :delete,
                      "turbo-confirm": "Are you sure you want to remove GitLab access?"
                    }, 
                    class: "btn btn-danger me-2" %>
                <%= link_to "Cancel", repositories_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>