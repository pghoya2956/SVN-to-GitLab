<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Configure GitLab Access Token</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @gitlab_token, url: gitlab_token_path, method: :post, data: { turbo: false }) do |form| %>
            <% if @gitlab_token.errors.any? %>
              <div class="alert alert-danger">
                <h6>Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @gitlab_token.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <% if @repository %>
              <%= hidden_field_tag :repository_id, @repository.id %>
            <% end %>
            
            <div class="mb-3">
              <%= form.label :endpoint, class: "form-label" %>
              <%= form.text_field :endpoint, class: "form-control", placeholder: "https://gitlab.com/api/v4" %>
              <div class="form-text">GitLab API endpoint (use https://gitlab.com/api/v4 for GitLab.com)</div>
            </div>
            
            <div class="mb-3">
              <%= form.label :token, "Access Token", class: "form-label" %>
              <%= form.password_field :token, class: "form-control", required: true %>
              <div class="form-text">
                Create a personal access token with 'api' scope in GitLab:
                <ol class="mt-2">
                  <li>Go to GitLab → Settings → Access Tokens</li>
                  <li>Create a new token with 'api' scope</li>
                  <li>Copy the token and paste it here</li>
                </ol>
              </div>
            </div>
            
            <div class="d-flex justify-content-between">
              <%= form.submit "Save and Validate", class: "btn btn-primary" %>
              <%= link_to "Cancel", repositories_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>