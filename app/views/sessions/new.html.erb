<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4>Login with GitLab PAT</h4>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          
          <%= form_with url: login_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :endpoint, "GitLab API Endpoint", class: "form-label" %>
              <%= f.text_field :endpoint, class: "form-control", value: "https://gitlab.com/api/v4" %>
              <small class="form-text text-muted">
                For self-hosted GitLab, enter your API endpoint
              </small>
            </div>
            
            <div class="mb-3">
              <%= f.label :token, "GitLab Personal Access Token", class: "form-label" %>
              <%= f.password_field :token, class: "form-control", required: true, 
                placeholder: "glpat-xxxxxxxxxxxxxxxxxxxx" %>
              <small class="form-text text-muted">
                <strong>Required scopes:</strong> api, read_repository, write_repository<br>
                <a href="https://gitlab.com/-/user_settings/personal_access_tokens" target="_blank" rel="noopener">
                  <i class="bi bi-box-arrow-up-right"></i> Create new token
                </a>
              </small>
            </div>
            
            <%= f.submit "Login", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>